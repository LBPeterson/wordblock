{
	"manifest_version": 2,
	"name": "Anti-Brand",
	"version": "0.1",
	"background": { "scripts": ["background.js"] },
	"description": "Blacks out brand names on web pages",
	"browser_action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html"
  },
	"content_scripts":
	[
		{
			"matches": ["*://*/*"],
			"js": ["replace.js"]
		}
	],
	"permissions": [
    "activeTab"
  ]
}
